    <div class="name">
      <span>hopeflea</span>
      <br />
      <span>
        <span id="age">20</span><span> / </span><span
          style="width: 62px; text-align: center; display:inline-block;"
          id="pronom">they/them</span
        >
      </span>
    </div>
  </div>
</div>
