<img class="custom-cursor" src="/icons/arrow.png" data-cursor />

<style>

.custom-cursor {
  position: fixed;
  z-index: 1000;
  pointer-events: none;
  height: 30px;
  width: 30px;
  display: none;
}

</style>

<script>
import { cursorData } from "./depth.js";

const cursor = document.querySelector(".custom-cursor");

cursorData.setType = (type) => {
  document.body.style.cursor = "none";
  cursor.style.display = "inherit";
  if (type == "forward") {
    cursor.src = "/icons/arrow.png";
  } else if (type == "question") {
    cursor.src = "/icons/question.png";
  } else if (type == "speech") {
    cursor.src = "/icons/speech.png";
  }
}

cursorData.unsetType = () => {
    cursor.style.display = "none";
    document.body.style.cursor = "pointer";
}

document.addEventListener("mousemove", (e) => {
  cursor.style.left = `${e.clientX - 15}px`;
  cursor.style.top = `${e.clientY - 15}px`;
});

</script>
