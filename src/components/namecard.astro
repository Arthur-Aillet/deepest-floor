<style>

.namecard {
  width: fit-content;
  height: fit-content;
  position: relative;
}

.inner {
  font-size: 12px;
  transform: rotateX(0deg);
  transition: all 1s;
  backface-visibility: hidden;
}

.namecard:hover .inner {
  transform: rotateX(180deg);
}

.front {
  transform: rotateX(0deg);
  position: relative;
}

.back {
  position: absolute;
  top: 0px;
  left: 0px;
  margin-top: 0%;
  transform: rotateX(180deg);
}

.namecard:hover .back {
  transform: rotateX(0deg);
}

</style>

<div id="content-wrapper" class="namecard">
  <div class="sidebar inner front block" style="display: flex">
    <slot name="front"/>
  </div>
  <div class="sidebar inner back block" style="display: flex">
    <slot name="back"/>
  </div>
</div>
