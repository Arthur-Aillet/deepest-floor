---
import Cursor from "../components/cursor.astro";
import Eyes from "../components/eyes.astro";
import Namecard from "../components/namecard.astro";
import Portrait from "../components/portrait.astro";
import Bank from "../components/bank.astro";
import CustomLabel from "../components/CustomLabel.astro";
import Background from "../components/Background.astro";
---

<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Deepest floor</title>
    <link rel="stylesheet" href="style.css" />
    <meta charset="UTF-8">
    <meta http-equiv="Content-type" content="text/html; charset=UTF-8">
  </head>
  <body>
    <div id="label-container" ></div> <!-- Do not remove even if empty -->
    <Cursor />
    <Background />
    <Bank />
    <main>
      <div style="padding-top: 30px">
        <header class="block">Endless pit for <a style="color: orange; background-color: black;">withered</a> souls</header>
        <div class="section">
          <div class="sidebar-left">
            <div
              class="block"
              style="height: 130px; width: calc(100% - 16px); margin-bottom: 0"
            >
              <p>My Socials</p>
              <ul>
                <li>
                  <a
                    href="https://bsky.app/profile/iddeko.bsky.social"
                    target="_blank"
                    >bluesky</a
                  >
                </li>
              </ul>
            </div>

            <div
              class="block"
              style="
                flex-grow: 1;
                overflow-x: hidden;
                width: 100%;
                margin-top: 0;
              "
            >
              <p>Just plug me already</p>
            </div>
          </div>

          <div class="content block">
            <h1>This is a title</h1>
            <p>This is a paragraph.</p>
            <p>
              Embrace the <a href="https://rustup.rs/" target="_blank">rust</a>.
            </p>
          </div>
          <div class="sidebar">
            <Portrait />
            <Namecard>
              <Fragment slot="front">Radical FOSS activist</Fragment>
              <Fragment slot="back">Leftist optimist</Fragment>
            </Namecard>
            <Namecard>
              <Fragment slot="front">Post-cyberpunk artist</Fragment>
              <Fragment slot="back">
                <Eyes/>
              </Fragment>
            </Namecard>
            <Namecard>
              <Fragment slot="front">Non-binary mess</Fragment>
              <Fragment slot="back">Autistic Robot w/ shitty ram</Fragment>
            </Namecard>
          </div>
        </div>
        <footer class="block">
          <p                 style="postition: relative;">
            <small>
              This page content is available on
              <a
                href="https://github.com/Arthur-Aillet/deepest-floor"
                target="_blank"
                >github</a
              >
              under the
              <a
                href="https://github.com/Arthur-Aillet/deepest-floor/blob/main/LICENSE"
                target="_blank"
                id="license-link"
                >AGPL GNU License
              </a>
            </small>
          </p>
          <CustomLabel id="license-link" mousetracked={false} text="AGPL is the most efficient license I know to force companies to publish the changes they make. If they use our software, even in their private networks, and edit it, they have to publish the changes under the same license! If they use our libraries they need to make their whole software open source. AGPL spreads to every project it touches and could save us from closed source software."/>
        </footer>
      </div>
    </main>
  </body>
</html>
